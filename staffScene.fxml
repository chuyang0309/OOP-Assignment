<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="738.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ass.StaffController">
   <center>
      <VBox alignment="CENTER_LEFT" prefHeight="742.0" prefWidth="816.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Staff Management ">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Label text="Add New (staff)">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <GridPane hgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="NEVER" />
                <ColumnConstraints hgrow="ALWAYS" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="ID:" />
                  <Label text="Name:" GridPane.rowIndex="1" />
                  <Label text="Designation:" GridPane.rowIndex="2" />
                  <Label text="Sex:" GridPane.rowIndex="3" />
                  <Label text="Salary:" GridPane.rowIndex="4" />
                  
                  <TextField fx:id="staffID" GridPane.columnIndex="1" />
                  <TextField fx:id="staffName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="staffDesignation" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="staffSalary" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <ComboBox fx:id="staffSex" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <Label text="Existing (staff)">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextArea fx:id="existingStaff" prefHeight="234.0" prefWidth="810.0" />
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#menu" style="-fx-background-color: grey;" text="Return to main menu" textFill="#f8f8f8">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
                  <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#addNewStaff" style="-fx-background-color: #00D603;" text="Add Staff" textFill="#f8f8f8">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="75.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefWidth="166.0" text="HMS">
               <font>
                  <Font name="System Bold" size="48.0" />
               </font>
            </Label>
            <Label fx:id="systime" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="84.0" prefWidth="166.0" text="system time" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </top>
</BorderPane>
